<Window x:Class="diplom_final2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:diplom_final2"
        mc:Ignorable="d"
        Title="MainWindow" Height="641" Width="1312">
    <Grid Margin="10,0,10,0">
        <DataGrid x:Name="raspr" AutoGenerateColumns="False" Margin="10,10,70,0" VerticalScrollBarVisibility="Auto" Height="555" VerticalAlignment="Top">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Text="{Binding}"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="NN" Binding="{Binding NN}" Width="30" />
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Фамилия}" Width="80"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding ФИО}" Width="220"/>
                <DataGridComboBoxColumn x:Name="Должности" Header="Должность" Width="105" DisplayMemberPath="Должность" SelectedItemBinding="{Binding Должность}"/>
                <DataGridTextColumn Header="Бюджет" Binding="{Binding Бюджет}" Width="80"/>
                <DataGridTextColumn Header="Внебюджет" Binding="{Binding Внебюджет}" Width="80"/>
                <DataGridTextColumn Header="Федералы" Binding="{Binding Федералы}" Width="80"/>
                <DataGridTextColumn Header="Часы по бюджету" Binding="{Binding Часы_по_бюджету}" Width="80"/>
                <DataGridTextColumn Header="Ставка по бюджету" Binding="{Binding Ставка_по_бюджету}" Width="80"/>
                <DataGridTextColumn Header="Часы по внебюджету" Binding="{Binding Часы_по_внебюджету}" Width="80"/>
                <DataGridTextColumn Header="Ставка по внебюджету" Binding="{Binding Ставка_по_внебюджету}" Width="80"/>
                <DataGridTextColumn Header="Ставка итого" Binding="{Binding Ставка_итого}" Width="88"/>
                <DataGridTextColumn Header="Необходимая ставка" Binding="{Binding Необходимая_ставка}" Width="88"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="1212,13,0,0" VerticalAlignment="Top" Click="Button_Click" Width="65" Height="25"/>
        <Button Content="2 окно" HorizontalAlignment="Left" Height="25" Margin="1212,51,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click_1"/>
        <Button Content="Расчитать" HorizontalAlignment="Left" Height="25" Margin="1212,92,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click_2"/>
        <Button Content="Печать" HorizontalAlignment="Left" Height="25" Margin="1212,133,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click_3"/>

    </Grid>
</Window>
